{
  "permissions": {
    "allow": [
      "List(*)",
      "Fetch(https://*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(tr:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git branch:*)",
      "Bash(gh pr create:*)",
      "Bash(docker:*)",
      "Bash(docker compose:*)",
      "Bash(mv:*)"
    ],
    "deny": [
      "Bash(git tag:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)"
    ]
  }
}

